doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Glimpse AI
    link(rel='stylesheet', href='.././style.css')
  body
    .bg
    .heading
      h1.headline Glimpse AI
    .searchbar
      form(action='/getImage', method='post', autocomplete='off')
        div
          input#searchQuery(name='prompt', type='text', placeholder='Enter your detailed glimpse', required='')
        .n
          label(for='n') No of Images
          input#no(name='n', type='number', value='1', placeholder='No of Images', min='1', max='10')
        .gridview
          label Choose Size: &nbsp;
          input#small(name='size', type='radio', value='256x256', required='')
          | &nbsp;
          label(for='size') 256x256 
          | &nbsp; &nbsp;
          input#medium(name='size', type='radio', value='512x512') 
          |  &nbsp;
          label(for='size') 512x512 
          | &nbsp; &nbsp;
          input#large(name='size', type='radio', value='1024x1024')
          | &nbsp;
          label(for='size') 1024x1024
        .gridview
            button(type='submit') get Glimpse

